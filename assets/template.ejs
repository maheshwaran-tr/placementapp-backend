<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        h1 {
            text-align: center;
        }
        #l2 {
            width: 100px; /* Both images will have the same size */
        }

        #l1 {
            width: 90px; /* Both images will have the same size */
        }
        .header {
            display: flex;
            justify-content: space-between; /* Position images on left and right */
            align-items: center; /* Vertically align items */
            margin-bottom: 20px;
        }
        .images {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }
        .title-description {
            text-align: center;
            width: 60%; /* Make the title and description take up the center space */
        }
        .title {
            font-size: 1.5em;
            margin-top: 20px;
        }
        .description {
            margin-top: 10px;
            font-size: 1em;
        }
        table {
            width: 100%;
            margin-top: 30px;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: center;
            font-size: 0.8em; /* Decrease font size for table data */
        }
        th {
            background-color: #f2f2f2;
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            font-size: 0.5em;
        }
    </style>
</head>
<body>

    <!-- Header Section: Images on left and right with title/description in center -->
    <div class="header">
        <img src="https://pbywhmrgjtkosnsdunvc.supabase.co/storage/v1/object/public/sit-tpc/drive-docs/sit.jpg" alt="Logo" class="logo" id="l1">
        
        <img src="https://pbywhmrgjtkosnsdunvc.supabase.co/storage/v1/object/public/sit-tpc/drive-docs/sit3.png" class="centerPic">

        <img src="https://pbywhmrgjtkosnsdunvc.supabase.co/storage/v1/object/public/sit-tpc/drive-docs/tpc.png" alt="Secondary Image" class="logo" id="l2">
    </div>

    <!-- Table Section -->
    <table>
        <thead>
            <tr>
                <th>RollNo</th>
                <th>RegNo</th>
                <th>Name</th>
                <th>Department</th>
                <th>Email</th>
                <th>PhoneNo</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.rollno %></td>
                    <td><%= student.regno %></td>
                    <td><%= student.name %></td>
                    <td><%= student.department.name %></td>
                    <td><%= student.email %></td>
                    <td><%= student.phone_number %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Footer Section -->
    <div class="footer">
        <p>Generated by Training and Placement Cell Application</p>
    </div>

</body>
</html>
